#!/bin/sh

. /etc/init.d/rc.common

TZ_ENV_VAR=timezone
TZNAME_FILE="/etc/timezone"
TZCODE_FILE="/etc/TZ"
TZJSON_FILE="/var/www/a/tz.js"

set_timezone() {
	tzname=$(get $TZ_ENV_VAR)
	[ -z "$tzname" ] && quit "Timezone is not set"

	if [ ! -f $TZNAME_FILE ] || [ "$tzname" != "$(cat $TZNAME_FILE)" ]; then
		run "echo $tzname > $TZNAME_FILE"
	fi

	[ -f "$TZJSON_FILE" ] || die "$TZJSON_FILE not found"

	line=$(grep -i -F "$tzname" $TZJSON_FILE)
	[ -z "$line" ] && die "Timezone $tzname not found in $TZJSON_FILE"

	tz=$(echo "$line" | sed "s/^.*v:'\([^']*\)'.*$/\1/")
	if [ ! -f $TZCODE_FILE ] || [ "$tz" != "$(cat $TZCODE_FILE)" ]; then
		run "echo $tz > $TZCODE_FILE"
	fi
	run "export TZ=$tz"
}

case "$1" in
	start)
		starting
		set_timezone
		ok
		;;
	stop)
		stopping
		ok
		;;
	*)
		die "Usage: $0 {start|stop}"
		;;
esac

exit 0
