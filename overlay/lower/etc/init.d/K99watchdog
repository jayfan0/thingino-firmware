#!/bin/sh

DAEMON_ARGS="-T 60 /dev/watchdog"

. /etc/init.d/rc.common

start() {
	starting
	[ "true" = "$(get disable_watchdog)" ] && quit "Disabled"
	start_daemon
}

stop() {
	stopping
	stop_daemon
}

case "$1" in
	start | stop)
		$1
		;;

	reload | restart)
		stop
		sleep 1
		start
		;;

	*)
		die "Usage: $0 {start|stop|restart}"
		;;
esac

exit 0
